{{#partial "title"}}
    Let's create a squad!
{{/partial}}

{{#partial "content"}}
<!--    <div class="s-form">-->
<!--    <img src="/images/squadf.jpeg" >-->
       <div class="jumbotron" style="background-color: purple">
    <form action="/success" method="post">
        <div class="form-group">
            <label for="name">Enter the name of your squad:{{name}}</label>
            <input id="name" name="name" class="form-control" type="text" required>
        </div>
        <div class="form-group">
            <label for="size">Enter the size of your squad:{{size}}</label>
            <input id="size" name="size" class="form-control" type="number" required>
        </div>
        <div class="form-group">
            <label for="cause">Enter the cause:{{cause}}</label>
            <input id="cause" name="cause" class="form-control" type="text" required>
        </div>
        <button class="btn btn-success" type="submit">Submit</button>
    </form>
    </div>
{{/partial}}

